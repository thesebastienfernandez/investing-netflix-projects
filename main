# Importing pandas and matplotlib
import pandas as pd
import matplotlib.pyplot as plt

# Read in the Netflix CSV as a DataFrame
netflix_df = pd.read_csv("netflix_data.csv")

# select movies of decade 90
netflix_movies_decade90 = netflix_df[(netflix_df['release_year'] >= 1990) & (netflix_df['release_year'] <= 1999) & (netflix_df['type'] == 'Movie')]

# visualisation of distribution by duration
netflix_movies_decade90['duration'].hist(bins=50)
plt.show()

# get the most frequently duration of the decade 90 movies
duration = netflix_movies_decade90['duration'].mode()[0]
print(duration)

# select shorts action movies of the decade 90
netflix_movies_decade90_shorts_action = netflix_movies_decade90[(netflix_movies_decade90['duration'] < 90) & (netflix_movies_decade90['genre'] == 'Action')]

# get number of the previous selection
short_movie_count = len(netflix_movies_decade90_shorts_action)
print(short_movie_count)